{
  "name": "expmgr-app",
  "version": "1.0.0",
  "description": "Expense Manager Application built with SAP CAP",
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-managejournalentry": "cds watch --open com.dh.mng.journal.entry.managejournalentry/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-managesharedjournalentry": "cds watch --open com.dh.mng.shared.journal.entry.managesharedjournalentry/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      }
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/managejournalentry",
    "app/managesharedjournalentry"
  ]
}
